@model HCProject.Domain.Pais

@{
    ViewData["Title"] = "Crear nuevo país";
    ViewData["CardTitle"] = "País";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!--  -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewData["CardTitle"]</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CodigoIso" class="control-label"></label>
                        <input asp-for="CodigoIso" class="form-control" />
                        <span asp-validation-for="CodigoIso" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CodigoTelefono" class="control-label"></label>
                        <input asp-for="CodigoTelefono" class="form-control" />
                        <span asp-validation-for="CodigoTelefono" class="text-danger"></span>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <div class="row justify-content-between">
                        <div class="col-3">
                            <button type="submit" class="btn btn-success btn-block btn-flat"><i class="fa fa-save"></i> Guardar</button>
                        </div>
                        <div class="col-3">
                            <a asp-action="Index" class="btn btn-default btn-block btn-flat"><i class="fa fa-angle-left"></i> Regresar</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
</div>