@model HCProject.Domain.Pais

@{
    ViewData["Title"] = "Detalle";
    ViewData["CardTitle"] = "País";
}

    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!--  -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["CardTitle"]</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CodigoIso)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CodigoIso)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CodigoTelefono)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CodigoTelefono)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <div class="row justify-content-between">
                        <div class="col-3">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-block btn-flat"><i class="fa fa-edit"></i> Editar</a>
                        </div>
                        <div class="col-3">
                            <a asp-action="Index" class="btn btn-default btn-block btn-flat"><i class="fa fa-angle-left"></i> Regresar</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </div>